{
  "tasks": {
    "start": "deno run -A --env --no-prompt --unstable-worker-options main.ts",
    "check": "deno fmt && deno lint && deno check main.ts",
    "release": "deno eval 'import \"deco/scripts/release.ts\"'",
    "update": "deno eval 'import \"deco/scripts/update.ts\"'",
    "install": "deno eval 'import \"deco/scripts/apps/install.ts\"'",
    "uninstall": "deno eval 'import \"deco/scripts/apps/uninstall.ts\"'",
    "bundle": "deno eval 'import \"deco/scripts/apps/bundle.ts\"' deco-sites/play"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "lint": {
    "files": {
      "exclude": ["static/", "README.md"]
    },
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["static/", "README.md"]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "experimentalDecorators": true
  },
  "imports": {
    "deco/": "https://denopkg.com/deco-cx/deco@1.61.2/",
    "$fresh/": "https://deno.land/x/fresh@1.6.8/",
    "preact": "https://esm.sh/preact@10.19.2",
    "preact/": "https://esm.sh/preact@10.19.2/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.4.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "std/": "https://deno.land/std@0.190.0/",
    "fast-json-patch": "npm:fast-json-patch@3.1.1",
    "@cloudflare/workers-types": "npm:@cloudflare/workers-types@4.20240208.0",
    "https://denopkg.com/deco-cx/realtime@b299319cd6b13b4077046841331f35609dc3ebd5/src/ws.ts": "./ws.ts",
    "https://denopkg.com/deco-cx/realtime@b299319cd6b13b4077046841331f35609dc3ebd5/src/fs.ts": "./fs.ts"
  },
  "exclude": ["node_modules", "static/", "README.md"],
  "nodeModulesDir": true
}
